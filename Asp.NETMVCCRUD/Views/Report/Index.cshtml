
<div class="row">
    <div class="col-md-1">
        <label>Bulan</label>
    </div>
    <div class="col-md-4">
        <select class="form-control dropdown" id="bulan">
            <option value="1">Januari</option>
            <option value="2">Februari</option>
            <option value="3">Maret</option>
            <option value="4">April</option>
            <option value="5">Mei</option>
            <option value="6">Juni</option>
            <option value="7">Juli</option>
            <option value="8">Agustus</option>
            <option value="9">September</option>
            <option value="10">Oktober</option>
            <option value="11">November</option>
            <option value="12">Desember</option>
        </select>
    </div>
    <div class="col-md-1">
        <label>Tahun</label>
    </div>
    <div class="col-md-4">
        <select class="form-control dropdown" id="tahun">
            <option value="2020">2020</option>
        </select>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-1">
        <label>Operator</label>
    </div>
    <div class="col-md-4">
        <select class="form-control dropdown" id="oper">
            @foreach (var item in ViewBag.OperatorList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button onclick="searchreport()" class="form-control btn btn-primary">Search</button>
    </div>
</div>
<br />

<table id="reporttable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Tanggal</th>
            <th>Kode Warna</th>
            <th>StatusMesin</th>
            <th>HasilKain</th>
            <th>Pick</th>
            <th>Nilai</th>
            <th>Harga / Meter</th>
            <th>Total</th>
        </tr>
    </thead>
</table>
<div class="row">
    <div class="col-md-10">

    </div>
    <div class="col-md-2">
        <label>Total : </label><label id="summary"></label>
    </div>
</div>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="cdn.datatables.net/plug-ins/1.10.21/api/sum().js"></script>

    <script>
        var Popup, dataTable;
        function searchreport() {
            var data = { Bulan: $("#bulan").val(), Tahun: $("#tahun").val(), Operator: $("#oper").val() }
            $('#reporttable').DataTable().clear().destroy();
            dataTable = $("#reporttable").DataTable({
                "ajax": {
                    "url": "/Report/GetData",
                    "type": "GET",
                    "datatype": "json",
                    "data": data                    
                },
                "columns": [
                    { "data": "Tanggal" },
                    { "data": "Tanggal" },
                    { "data": "KodeWarna" },
                    { "data": "StatusMesin" },
                    { "data": "HasilKain" },
                    { "data": "Pick" },
                    { "data": "Nilai" },
                    { "data": "HargaMeter" },
                    { "data": "Total" },

                ],
                "language": {

                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'desc']]
            });
            dataTable.on('order.dt search.dt', function () {
                dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
            //var sum = $('#reporttable').DataTable().column(9).data().sum()

             $.ajax({
                    url: '@Url.Action("GetSum", "Report")',
                    type: 'GET',
                    data: data,
                    success: function (result) {
                        console.log(result);
                        $("#summary").html(result.data);
                    },
                    error: function (err) {
                        alert(err);
                    }
                });
        }




        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: false,
                    title: 'Fill KodeWarna Details',
                    height: 350,
                    width: 700,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }

                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if($(form).valid()){
                $.ajax({
                    type : "POST",
                    url : form.action,
                    data : $(form).serialize(),
                    success : function (data) {
                        if(data.success)
                        {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message,{
                                globalPosition :"top center",
                                className : "success"
                            })

                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            if(confirm('Are You Sure to Delete this KodeWarna Record ?'))
            {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","KodeWarna")/' + id,
                    success: function (data) {
                        if (data.success)
                        {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
    </script>
}
