    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            $('#startdate').val(new Date());
            $('#enddate').val(new Date());
        });

        function searchreport() {
            var data = { startdate: $("#startdate").val(), enddate: $("#enddate").val(), Operator: 0 }
            $('#reporttable').DataTable().clear().destroy();
            dataTable = $("#reporttable").DataTable({
                "ajax": {
                    "url": "/ReportAddOn/GetDataInspect",
                    "type": "GET",
                    "datatype": "json",
                    "data": data
                },
                "columns": [
                    { "data": "NoMesin" },
                    { "data": "NoMesin" },
                    { "data": "HasilKain", className: "text-right", render: $.fn.dataTable.render.number(',', '.', 0, '') },
                ],
                "language": {
                    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                },
                "columnDefs": [{
                    "searchable": false,
                    "orderable": false,
                    "targets": 0
                }],
                "order": [[1, 'desc']]
            });
            dataTable.on('order.dt search.dt', function () {
                dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();
        }
        function addCommas(nStr) {
            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }
            return x1 + x2;
        }


