@model Asp.NETMVCCRUD.Models.tm_Mesin
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Mesin", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Mesin_PK)

    <div class="form-group">
        @Html.LabelFor(model => model.KodeMesin, new { @class = "control-label" })
        @Html.EditorFor(model => model.KodeMesin, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KodeMesin)
    </div>
    if (Model.Mesin_PK == 0)
    {
<div class="form-group">
    @Html.LabelFor(model => model.StatusMesin_FK, new { @class = "control-label" })
    @Html.DropDownListFor(x => x.StatusMesin_FK, new SelectList(ViewBag.DDLStatMesin, "statmesinpk", "Text"), htmlAttributes: new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.StatusMesin_FK)
</div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.StatusMesin_FK, new { @class = "control-label" })
            @Html.EditorFor(model => model.StatusMesin_FK, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.StatusMesin_FK)
        </div>
    }


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}