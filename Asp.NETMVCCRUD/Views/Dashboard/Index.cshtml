
@{
    ViewBag.Title = "Dashboard";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<input type="hidden" id="dailypk" />
<div class="form-group">
    <div class="row">
        <div class="col-md-6">
            <label>Pilih Tanggal</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <input id="datetrans" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <input type="button" class="btn btn-default" onclick="ondatechange()" value="Pilih" />
            <input type="button" class="btn btn-success" onclick="downloadexcel()" value="Download Excel" />
        </div>
    </div>
</div>

<div id="mainview" hidden>
    <div>
        <h2 id="dateview"></h2>
    </div>

    <button class="btn btn-success" onclick="btnaddclick()">Tambah Transaksi</button>
    <hr />
    <table class="table" id="maintable">
        <thead>
            <tr>
                <th>No</th>
                <th>Nomor Kertas</th>
                <th>Inspect</th>
                <th>Hasil Kain</th>
                <th>Penambahan</th>
                <th>Hasil Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="maintablebody">
        </tbody>
    </table>

</div>

@* Modal Add Transaksi *@
<div class="modal fade bd-example-modal-lg" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Create</h4>
            </div>
            <div class="modal-body">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@* Will be moved to single js file later *@


@section scripts{
    <script src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script type="text/javascript">
        Date.prototype.toDateInputValue = (function () {
            var local = new Date(this);
            local.setMinutes(this.getMinutes() - this.getTimezoneOffset());
            return local.toJSON().slice(0, 10);
        });
        $(document).ready(function () {
            $('#datetrans').val(new Date().toDateInputValue());
            ondatechange();
        });
        function ondatechange() {
            document.getElementById("mainview").style.display = "block";
            var data = { date: $("#datetrans").val() }

            $('#maintable').DataTable().clear().destroy();
            dataTable = $("#maintable").DataTable({
                "ajax": {
                    "url": "/Dashboard/GetData",
                    "type": "GET",
                    "data": data,
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Daily_PK" },
                    { "data": "SheetNum" },
                            { "data": "Recorder" },
                            { "data": "HasilKain" },
                            { "data": "Penambahan" },
                            { "data": "TotalKain" },

                        {
                            "data":"Daily_PK" , "render" : function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=ChangePage('@Url.Action("MainPage","Transaksi")/" + data + "')><i class='fa fa-info'></i> Details</a><a class='btn btn-warning btn-sm' onclick=PopupForm('@Url.Action("Edit","Dashboard")/" + data + "')><i class='fa fa-pencil'></i> Edit</a> ";
                        },
                            "orderable": false,
                            "searchable":false,
                            "width":"150px"
                        }

                    ],
                    "language": {

                    "emptyTable" : "No data found, Please click on <b>Add New</b> Button"
                        },
                    "columnDefs": [{
                        "searchable": false,
                        "orderable": false,
                        "targets": 0
                        }],
                    "order": [[1, 'desc']]
                    });

                    dataTable.on('order.dt search.dt', function () {
                        dataTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                            cell.innerHTML = i + 1;
                        });
                    }).draw();



            //var d = new Date();
            //var days = ["Minggu", "Senin", "Selasa", "Rabu", "Kamis", "Jumat", "Sabtu"];
            var hari = "Tanggal : " + $("#datetrans").val();
            $("#dateview").html(hari);
        }
        function btnaddclick() {
            $.ajax({
                   url: '@Url.Action("Create","Dashboard")',
                        type: 'get',
                        data: { },
                        success: function (result) {
                            $(".modal-title").html("Tambah Transaksi")
                            $(".modal-body").html(result);
                            $(".modal").modal("show");
                            $("#mesin").select2({
                                width: '80%'
                            });
                            $("#kodewarna").select2({
                                width: '80%'
                            });
                            $("#recorder").select2({
                                width: '80%'
                            });
                            $('#daily').val($("#datetrans").val());
                        },
                        error: function (err) {
                            alert(err);
                        }
                    });
        }

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Edit Details',
                        height: 350,
                        width: 700,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }

                    });

                });

        }


        function Delete(id) {
            if (confirm('Are You Sure to Delete this Sheet Record ?')) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete","Dashboard")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }

                });
            }
        }
        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();

                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })

                        }
                    }
                });
            }
            return false;
        }


         function createdaily() {
             var data = {
                 daily: $("#datetrans").val(),
                 sheetnum: $("#sheetnum").val(),
                 recorder: $("#recorder").val()
             }
                $.ajax({
                    url: '@Url.Action("CreateDaily", "Dashboard")',
                    type: 'POST',
                    data: data,
                    success: function (result) {
                        if (result.success) {
                            ondatechange();
                        }
                        else {
                            alert(result.message);
                        }
                    },
                    error: function (err) {
                        alert(err);
                    }
                });
        }



        function ChangePage(x) {
            window.location.href = x;
        }

        function downloadexcel() {
            window.open( "@Url.Action("Download","Dashboard")?date=" + $("#datetrans").val());
        }

    </script>
}