@model ZXWebApps.Models.tm_KodeWarna
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "KodeWarna", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.KodeWarna_PK)

    <div class="form-group">
        @Html.LabelFor(model => model.KodeWarna, new { @class = "control-label" })
        @Html.EditorFor(model => model.KodeWarna, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KodeWarna)
    </div>
    if (Model.Pick == 0)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Pick, new { @class = "control-label" })
            @Html.EditorFor(model => model.Pick, new { htmlAttributes = new { @class = "form-control", @Value = "" } })
            @Html.ValidationMessageFor(model => model.Pick)
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.Pick, new { @class = "control-label" })
            @Html.EditorFor(model => model.Pick, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Pick)
        </div>
    }


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}