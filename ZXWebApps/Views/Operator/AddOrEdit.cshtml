@model ZXWebApps.Models.tm_Operator
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Operator", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Operator_PK)
    if (Model.Operator_PK == 0)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.NoOperator, new { @class = "control-label" })
            @Html.EditorFor(model => model.NoOperator, new { htmlAttributes = new { @class = "form-control" , @Value = ""} })
            @Html.ValidationMessageFor(model => model.NoOperator)
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.LabelFor(model => model.NoOperator, new { @class = "control-label" })
            @Html.EditorFor(model => model.NoOperator, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NoOperator)
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(model => model.NIP, new { @class = "control-label" })
        @Html.EditorFor(model => model.NIP, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NIP)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Nama, new { @class = "control-label" })
        @Html.EditorFor(model => model.Nama, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}